{
  "name": "chatti-backend",
  "version": "1.0.0",
  "description": "Real time chat Application",
  "main": "dist/server.js",
  "repository": "https://github.com/harerakalex/chatti-backend.git",
  "author": "harerakalex <hareraloston@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node .",
    "dev": "nodemon",
    "test": "node --expose-gc node_modules/jest/bin/jest --coverage --logHeapUsage --runInBand --no-cache --detectOpenHandles --forceExit",
    "sequelize": "node_modules/.bin/sequelize",
    "db:seed": "yarn sequelize db:seed:all",
    "db:seed:undo": "yarn sequelize db:seed:undo",
    "db:seed:undo:all": "yarn sequelize db:seed:undo:all",
    "db:migrate": "yarn sequelize db:migrate",
    "db:migrate:undo": "yarn sequelize db:migrate:undo",
    "db:migrate:rollback": "yarn sequelize db:migrate:undo:all",
    "db:create:db": "yarn sequelize db:create chattidb-test",
    "db:drop:db": "yarn sequelize db:drop chattidb"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/socket.io": "^2.1.12",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.23.0",
    "cors": "^2.8.5",
    "datauri": "^3.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.12",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^1.1.0",
    "socket.io": "^3.0.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-classes": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.6.0",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "^4.28.9",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
