{
  "name": "chatti-backend",
  "version": "1.0.0",
  "description": "Real time chat Application",
  "main": "./src/server.js",
  "repository": "https://github.com/harerakalex/chatti-backend.git",
  "author": "harerakalex <hareraloston@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node .",
    "dev": "nodemon",
    "test": "jest --coverage --runInBand",
    "seed": "node_modules/.bin/sequelize db:seed:all",
    "seed:undo": "node_modules/.bin/sequelize db:seed:undo",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "migrate:undo": "node_modules/.bin/sequelize db:migrate:undo",
    "create:db": "node_modules/.bin/sequelize db:create chattidb",
    "drop:db": "node_modules/.bin/sequelize db:drop chattidb"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.12",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^1.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/sequelize": "^4.28.9",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
